<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
         <h1 id="tables">{{titulo}} <a href="/curso/create" class="btn btn-primary">+</a></h1>
      </div>
      <div class="bs-component">
        <table class="table table-hover">
          <thead>
            <tr class="primary">
            <th scope="col">Sigla</th>
            <th scope="col">Nome</th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
              {{#each cursos}}
                <tr>
                    <th scope="row">{{sigla}}</th>
                    <td>{{nome}}</td>
                    <td class="options">
                        <a href="/curso/{{id}}"><i class="fas fa-eye"></i></a>
                        <a href="/curso/update/{{id}}"><i class="fas fa-edit"></i></a>
                        <a href="/curso/remove/{{id}}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
              {{/each}}
          </tbody>
        </table>
    </div>
  </div>
</div>